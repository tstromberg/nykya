{{template "base" .}}

{{ define "title" }}{{ .RawItem.FrontMatter.Title }}{{ end }}

{{ define "headers" }}
  <link href="atom.xml" type="application/atom+xml" rel="alternate" title="{{.Title }} feed" />
  <meta name=viewport content="width=device-width, initial-scale=1"/>
{{ end }}

{{ define "content" }}
  <h1>{{ .RawItem.FrontMatter.Title }}</h1>

  <p><em>{{ .RawItem.FrontMatter.Posted.Format "2006-01-02"}}</em></p>

  <p>{{ .RawItem.FrontMatter.Description }}</p>

  {{ .Content }}
{{ end }}
