{{define "style"}}
<style>
  body {
    margin: 1em;
    padding: 1em;
    font-family: Lora, serif;
  }

  img#profile {
    border-radius: 50%;
  }

  #profile-container {
    margin-top: auto;
    margin-bottom: auto;
    display: block;
  }

  h1,
  h2,
  h3 {
    font-family: "Open Sans", sans-serif;
  }

  header {
    font-size: 150%;
    font-family: monospace;
    padding: 0.5em;
    color: #999;
    display: flex;
    background-color: #E7F1FE;
  }

  .left {
    border: 1px solid 00f;
    width: 70%;
  }

  .right {
    margin-top: auto;
    margin-bottom: auto;
    font-size: 80%;
    text-align: right;
    flex-grow: 1;
  }

  div#name {
    margin-left: 0.5em;
    margin-top: auto;
    margin-bottom: auto;
    flex-grow: 3;
  }

  .menuitem {
    display: inline-block;
  }

  main {
    display: flex;
  }

  #content {
    padding-left: 8mm;
    padding-right: 8mm;
    flex-basis: 60em;
  }

  #side {
    /* background-color: #212121; */
    flex-basis: 800px;
    flex-grow: 1;
    flex-shrink: 1;
    padding: 4px;
  }

  #side img {
    margin: 2px;
  }

  .daily {
    display: inline-block;
  }

  pre {
    overflow-x: auto;
    font-size: 90%;
  }

  blockquote {
    margin: 10px;
    border-left: 3px solid #eee;
    padding-left: 15px;
    color: #333;
  }

  #footsie {
    text-align: right;
    font-family: monospace;
  }

  .prev_next {
    border-top: 1px solid #aaa;
    padding-top: 0.5em;
    padding-bottom: 0.5em;
    background-color: #f5f5f5;
    margin-bottom: 1em;
    font-size: 66%;
    width: 100%;
  }

  .previous {
    width: 49%;
    text-align: left;
    display: inline-block;
  }

  .next {
    text-align: right;
    width: 49%;
    display: inline-block;
  }


  /* bits stolen from ts handmade page */
</style>
{{ end }}
